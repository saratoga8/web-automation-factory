{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 14",

  "compilerOptions": {
    "outDir": "dist/out-tsc",
    "lib": ["es2020", "dom"],
    "module": "commonjs",
    "target": "es2020",
    "types": ["node" ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": true
  },
  "include": ["infra/**/*.ts", "step-definitions/**/*.ts"],
  "exclude": ["cypress/**/*.ts", "node_modules"]
}