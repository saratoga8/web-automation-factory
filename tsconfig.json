{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 14",

  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "dist/out-tsc",
    "lib": ["es2020", "dom"],
    "module": "es2020",
    "target": "es2020",
    "types": ["node" ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node16",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "strictPropertyInitialization": true,
    "strictFunctionTypes": true,
    "incremental": false,
    "noFallthroughCasesInSwitch": true,
    "declaration": false,
  },
  "include": ["infra/**/*.ts", "step-definitions/**/*.ts"],
  "exclude": ["cypress/**/*.ts", "node_modules"]
}